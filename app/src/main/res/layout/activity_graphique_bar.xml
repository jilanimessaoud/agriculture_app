<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/border_button_ajout"
        android:id="@+id/ParCercle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorELm"
        android:text="Représentation graphique par secteur" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/gouvernorat_delegation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diagramme en bâton"
        android:textStyle="bold"
        android:textColor="@color/colorELm"
        android:background="@drawable/border_button_ajout"
        />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="d"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:id="@+id/titre"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="d"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:id="@+id/label"

        />

    <lecho.lib.hellocharts.view.ColumnChartView
        android:layout_marginLeft="0mm"
        android:id="@+id/graphiqueBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineAmbientShadowColor="@color/colorELm"
        android:outlineSpotShadowColor="@color/colorELm"
        />


</LinearLayout>