<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ViewMenuAjout$DirectionResponsable">


    <LinearLayout
        android:background="@color/ListeAjout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        >

        <Button

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Par Delegation"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorq"

            android:background="@drawable/border_button_ajout"
            android:id="@+id/StatistiqueDelegation"
            />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="par Gouvernorat"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorq"
            android:background="@drawable/border_button_ajout"
            android:id="@+id/StatistiqueGouvernorat"
            />

        <Button
            android:id="@+id/StatistiqueSecteur"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_button_ajout"
            android:text="Par Secteur"
            android:textColor="@color/colorq"
            android:textSize="25dp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/StatistiqueRetour"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_button_ajout"
            android:text="Retour"
            android:textColor="@color/colorq"
            android:textSize="25dp"
            android:textStyle="bold" />
        <ImageButton
            android:layout_marginTop="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/retour"
            android:id="@+id/imageButtonExit"

            />

    </LinearLayout>
</LinearLayout>