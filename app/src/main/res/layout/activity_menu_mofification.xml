<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/ListeAjout"

    >
    <Button
        android:id="@+id/buttomIdentificationExploitation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginRight="30dp"
        android:textSize="15dp"
        android:text="Identification de l'exploitation  "
        android:textColor="@color/colorq"
        android:background="@drawable/border_button_ajout"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/buttonCaracterstiqueExploitant"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border_button_ajout"
        android:text="caractéristiques de l'exploitant"
        android:textColor="@color/colorq"
        android:textStyle="bold"
        android:textSize="15dp" />




    <Button
        android:id="@+id/buttonOccupationSol"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border_button_ajout"
        android:text="La productivité"
        android:textColor="@color/colorq"
        android:textStyle="bold"

        android:textSize="15dp"
        />





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/retour"

            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sortir"
            android:textColor="@color/colorELm"
            android:textSize="20dp"
            android:layout_gravity="center"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        >
        <Button
            android:id="@+id/Retour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/retourmenu"

            />
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:textColor="@color/colorELm"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
    </LinearLayout>


</LinearLayout>




</LinearLayout>